<div class="row">
    {{#if noMatch}}
    <h3>
    {{noMatch}}
    </h3>
    {{/if}}
    {{#each products}}

        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="{{imgUrl}}" alt="..." class="img-responsive">
                <div class="caption">
                    <h3>{{title}}</h3>
                    <h5>{{brandName}}</h5>
                    <p class="description">{{description}}</p>
                    <div class="clearfix">
                        <div class="price pull-left">{{price}}</div>
                        <a href="/add-to-cart/{{_id}}" class="btn btn-success pull-right" role="button">Buy</a>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>
